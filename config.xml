<?xml version='1.0' encoding='utf-8'?>
<widget id="co.gov.minminas.redconexiones" version="1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Red Conexiones</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="ricardo.pardo@naturasoftware.com" href="http://www.naturasoftware.com">
        Natura Software
    </author>
    <content src="views/login.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="4000" />
    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/ldpi.png" />
        <icon density="mdpi" src="res/android/mdpi.png" />
        <icon density="hdpi" src="res/android/hdpi.png" />
        <icon density="xhdpi" src="res/android/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/xxxhdpi.png" />
        <splash density="land-hdpi" src="res/android/images/res-long-land-hdpi/default.png" />
        <splash density="land-ldpi" src="res/android/images/res-long-land-ldpi/default.png" />
        <splash density="land-mdpi" src="res/android/images/res-long-land-mdpi/default.png" />
        <splash density="land-xhdpi" src="res/android/images/res-long-land-xhdpi/default.png" />
        <splash density="land-xxhdpi" src="res/android/images/res-long-land-xxhdpi/default.png" />
        <splash density="land-xxxhdpi" src="res/android/images/res-long-land-xxxhdpi/default.png" />
        <splash density="port-hdpi" src="res/android/images/res-long-port-hdpi/default.png" />
        <splash density="port-ldpi" src="res/android/images/res-long-port-ldpi/default.png" />
        <splash density="port-mdpi" src="res/android/images/res-long-port-mdpi/default.png" />
        <splash density="port-xhdpi" src="res/android/images/res-long-port-xhdpi/default.png" />
        <splash density="port-xxhdpi" src="res/android/images/res-long-port-xxhdpi/default.png" />
        <splash density="port-xxxhdpi" src="res/android/images/res-long-port-xxxhdpi/default.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="DisallowOverscroll" value="true" />
        <icon height="180" src="res/iphone/appicon-60@3x.png" width="180" />
        <icon height="60" src="res/iphone/appicon-60.png" width="60" />
        <icon height="120" src="res/iphone/appicon-60@2x.png" width="120" />
        <icon height="76" src="res/iphone/appicon-76.png" width="76" />
        <icon height="152" src="res/iphone/appicon-76@2x.png" width="152" />
        <icon height="167" src="res/iphone/appicon-83.5@2x.png" width="167" />
        <icon height="40" src="res/iphone/appicon-Small-40.png" width="40" />
        <icon height="80" src="res/iphone/appicon-Small-40@2x.png" width="80" />
        <icon height="57" src="res/iphone/appicon.png" width="57" />
        <icon height="114" src="res/iphone/appicon@2x.png" width="114" />
        <icon height="72" src="res/iphone/appicon-72.png" width="72" />
        <icon height="144" src="res/iphone/appicon-72@2x.png" width="144" />
        <icon height="29" src="res/iphone/appicon-small.png" width="29" />
        <icon height="58" src="res/iphone/appicon-small@2x.png" width="58" />
        <icon height="87" src="res/iphone/appicon-small@3x.png" width="87" />
        <icon height="50" src="res/iphone/appicon-Small-50.png" width="50" />
        <icon height="100" src="res/iphone/appicon-Small-50@2x.png" width="100" />
        <splash height="480" src="res/iphone/Default.png" width="320" />
        <splash height="960" src="res/iphone/Default@2x.png" width="640" />
        <splash height="1024" src="res/iphone/Default-Portrait.png" width="768" />
        <splash height="2048" src="res/iphone/Default-Portrait@2x.png" width="1536" />
        <splash height="768" src="res/iphone/Default-Landscape.png" width="1024" />
        <splash height="1536" src="res/iphone/Default-Landscape@2x.png" width="2048" />
        <splash height="1136" src="res/iphone/Default-568h@2x.png" width="640" />
        <splash height="1334" src="res/iphone/Default-667h@2x.png" width="750" />
        <splash height="2208" src="res/iphone/Default-Portrait-736h@3x.png" width="1242" />
        <splash height="1242" src="res/iphone/Default-Landscape-736h@3x.png" width="2208" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-push" spec="^2.2.3">
        <variable name="ANDROID_SUPPORT_V13_VERSION" value="27.+" />
        <variable name="FCM_VERSION" value="11.6.2" />
    </plugin>
    <engine name="android" spec="^7.1.2" />
    <engine name="ios" spec="^4.5.5" />
</widget>
